%script.widget-template{type: 'text/template', 'data-widget-type' => 'area'}
  #plotarea
  #chart-controls
    .form-inline
      %button#refresh.btn.btn-mini
        %i.icon-refresh
        Refresh
      %span.space
      %label
        Cutoff min:
        %input.btn-mini#cutoff-min
      %span.space
      %label
        Cutoff max:
        %input.btn-mini#cutoff-max
      %span.space
      %label
        Refresh:
        %input.btn-mini#need-refresh{type: :checkbox, checked: :true}
      %label
        Timespan:
        %select#extend-timespan-val.btn-mini.span1
          = partial "widgets/extend_options"
        %button#extend-timespan.btn.btn-mini
          %i.icon-arrow-left
          Extend
        %button#reset-timespan.btn.btn-mini
          %i.icon-arrow-right
          Reset
      %span.space
      %label
        From:
        %input#start-time.datepicker
      %label
        Till:
        %input#end-time.datepicker
      %button#set-interval.btn.btn-mini
        %i.icon-time
        Set interval
  %hr

